<h1>Listing users</h1>

<table>
  <tr>
    <th>Email</th>
    <th>Pwd</th>
    <th>Phone</th>
    <th>Id card</th>
    <th>Sex</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%=h user.email %></td>
    <td><%=h user.pwd %></td>
    <td><%=h user.phone %></td>
    <td><%=h user.id_card %></td>
    <td><%=h user.sex %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New user', new_user_path %>